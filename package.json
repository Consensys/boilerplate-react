{
  "name": "boilerplate-react",
  "version": "0.2.0-dev",
  "description": "React boilerplate",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:ConsenSys/boilerplate-react.git"
  },
  "keywords": [
    "react",
    "boilerplate",
    "consensys"
  ],
  "author": "ConsenSys France",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ConsenSys/boilerplate-react/issues"
  },
  "dependencies": {
    "@material-ui/core": "^3.1.0",
    "@material-ui/icons": "^3.0.0",
    "connected-react-router": "^6.2.2",
    "history": "^4.7.2",
    "react": "^16.8.2",
    "react-dom": "^16.8.2",
    "react-redux": "^6.0.0",
    "react-router": "^4.3.0",
    "react-scripts": "^2.0.0",
    "redux": "^4.0.1"
  },
  "devDependencies": {
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "enzyme-to-json": "^3.3.0",
    "husky": "^1.1.0",
    "lint-staged": "^7.3.0",
    "prettier": "^1.10.2",
    "redux-test-utils": "^0.3.0"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!**/src/index.js",
      "!**/src/registerServiceWorker.js"
    ]
  },
  "prettier": {
    "useTabs": false,
    "tabWidth": 4
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
